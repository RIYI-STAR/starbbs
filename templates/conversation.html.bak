<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>公屏</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='bootstrap/css/bootstrap.min.css') }}">
</head>
<body>
    <div class="container-fluid" style="background: #c9ba82;height: 100%;">
        <div class="row text-center" style="background-color: cc6600"><h4>公屏聊天</h4></div>

        <div class="row">
            <div class="col-md-10 col-lg-10 col-xs-10 col-sm-10 col-md-push-1 col-lg-push-1 col-xs-push-1 col-sm-push-1">
                <iframe src="/public-news/" style="border: 2px solid;width: 100%;height: 80%;margin-top: 3%;"></iframe>
            </div>
        </div>

        <div>
            <div class="col-md-10 col-lg-10 col-xs-10 col-sm-10 col-md-push-1 col-lg-push-1 col-xs-push-1 col-sm-push-1">
                <div class="row">
                    <form action="" method="post">
                        <div class="col-md-10 col-lg-10 col-xs-8 col-sm-8" style="height: 4%;">
                            <input type="text" required="" placeholder="输入你的消息" name="message" id="message" style="height: 100%;width: 100%;">
                        </div>
                        <div class="col-md-2 col-lg-2 col-xs-4 col-sm-4" style="height: 4%">
                            <input type="submit" value="发送" style="height: 100%;width: 100%;">
                        </div>
                    </form>
                </div>
            </div>
        </div>



        <div class="row navbar-fixed-bottom text-center" style="b;height: 5%;background-color: cc6600;font-size: 20px;font-family: 隶书;">
            <a href="/" style="color: black;">
                <div class="col-md-3 col-lg-3 col-xs-3 col-sm-3" style="height: 100%">
                首页
            </div>
            </a>
            <a href="/conversation/" style="color: black;">
                <div class="col-md-3 col-lg-3 col-xs-3 col-sm-3" style="height: 100%">
                公屏
            </div>
            </a>
            <a href="/bbs/" style="color: black;">
                <div class="col-md-3 col-lg-3 col-xs-3 col-sm-3" style="height: 100%">
                论坛
            </div>
            </a>
            <a href="/mine/" style="color: black;">
                <div class="col-md-3 col-lg-3 col-xs-3 col-sm-3" style="height: 100%">
                我的
            </div>
            </a>
        </div>
    </div>
</body>
</html>